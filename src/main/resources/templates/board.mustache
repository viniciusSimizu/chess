<table
		id="board"
		hx-get="/board"
		hx-trigger="reload"
		hx-swap="outerHTML">
	<tbody>
		{{#rows}}
		<tr>
			{{#squares}}
				{{#isPiece}}
					<td class="piece {{classes}}">
					{{#moves}}
						<div class="move" style="
												--offsetX: {{offsetX}};
												--offsetY: {{offsetY}};
												"></div>
					{{/moves}}
				{{/isPiece}}
				{{^isPiece}}
					<td class="square">
				{{/isPiece}}
				</td>
			{{/squares}}
		</tr>
		{{/rows}}
	</tbody>
</table>
